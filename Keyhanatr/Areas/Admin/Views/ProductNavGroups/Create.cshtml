@model Keyhanatr.Data.Domain.Products.ProductNavGroup

@{
    ViewData["Title"] = "گروه جدید";
}

<h1>ایجاد گروه جدید برای بخش "Nav Bar"</h1>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" enctype="multipart/form-data">
                <div class="mb-3 pb-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="form-label" asp-for="NavTitle"></label>
                        <input class="form-control" asp-for="NavTitle" />
                        <div class="form-text">حداکثر 100 حرف هیچ L یا شکلک مجاز نیست.</div>
                        <span asp-validation-for="NavTitle" class="text-danger"></span>
                    </div>
                    <div class="col-sm-12">
                        <label asp-for="BackColor" class="form-label">رنگ پس زمینه</label>
                        <input asp-for="BackColor" class="form-control">
                    </div>
                    <div class="col-sm-12 mt-5">
                        <label asp-for="ImageName" class="form-label">انتخاب تصویر</label>
                        <input asp-for="ImageName" type="file" name="imgUp" />
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success d-block w-100" type="submit">  ثبت گروه ناوبری</button>
                    </div>
                </div>
            </form>
        </div>

        <div>
            <a asp-action="Index">بازگشت به لیست گروه های ناوبری</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
