@model Keyhanatr.Data.Domain.Products.ProductGroup

@{
    ViewData["Title"] = "گروه جدید";
}

<h1>ایجاد گروه جدید برای بخش "Nav Bar"</h1>

<h4>گروه اصلی</h4>
<hr />
<div class="row">
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create">
                <div class="mb-3 pb-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="form-label" asp-for="GroupTitle"></label>
                        <input class="form-control" asp-for="GroupTitle" />
                        <div class="form-text">حداکثر 100 حرف هیچ L یا شکلک مجاز نیست.</div>
                        <span asp-validation-for="GroupTitle" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-success d-block w-100" type="submit">  ثبت گروه جدید</button>
                    </div>
                </div>
            </form>
        </div>

        <div>
            <a asp-action="Index">بازگشت به لیست گروه ها</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
