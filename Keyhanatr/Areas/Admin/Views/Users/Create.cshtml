@model Keyhanatr.Data.Domain.User.User

@{
    ViewData["Title"] = "Create";
}
<h1>ثبت کاربر جدید</h1>
<hr />
<section class="col-lg-12 pt-lg-4 pb-4 mb-3">
    <div class="pt-2 px-4 ps-lg-0 pe-xl-5">
        <div class="tab-content">
            <div class="tab-pane fade show active" id="profile" role="tabpanel">
                <div class="bg-secondary rounded-3 p-4 mb-4">
                    <div class="d-flex align-items-center">
                        <div class="ps-3">
                            <div class="p mb-0 fs-ms text-muted">از این قسمت می توانید کاربر جدیدی به سایت اضافه نمایید.</div>
                        </div>
                    </div>
                </div>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row gx-4 gy-3">
                        <div class="col-sm-6">
                            <label asp-for="RoleId" class="form-label">نقش کاربر</label>
                            <select class="form-select" asp-for="RoleId" asp-items="ViewBag.RoleId"></select>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="UserName" class="form-label">نام کاربری</label>
                            <input asp-for="UserName" class="form-control" type="text" id="dashboard-ln">
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="Mobile" class="form-label">شماره همراه</label>
                            <input asp-for="Mobile" class="form-control">
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="Password" class="form-label">کلمه عبور</label>
                            <input asp-for="Password" class="form-control">
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="RegisterDate" class="form-label">تاریخ ثبت نام</label>
                            <input asp-for="RegisterDate" type="text" class="form-control">
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="ActiveCode" class="form-label">کد فعالسازی</label>
                            <input asp-for="ActiveCode" class="form-control" type="text">
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="Rate" class="form-label">امتیاز</label>
                            <input asp-for="Rate" class="form-control" type="number">
                        </div>
                        <div class="col-sm-6 form-check mt-5">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                            </label>
                        </div>
                        <div class="col-12">
                            <hr class="mt-2 mb-4">
                            <div class="d-sm-flex justify-content-between align-items-center">
                                <div>
                                    <a asp-action="Index">بازگشت به لیست</a>
                                </div>
                                <button class="btn btn-primary mt-3 mt-sm-0" type="submit">ثبت کاربر</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>