@model List<Keyhanatr.Data.Domain.Products.ProductGallery>
@{
    ViewData["Title"] = "لیست گالری ها";
}
<h2>لیست گالری های مربوط به محصول : @ViewBag.ProductTitle</h2>
<hr>
<div class="form-group">
    <a class="btn btn-outline-success"  href="/Admin/ProductGalleries/Create">ساخت گالری جدید</a>
</div>
<hr />
<div class="container">
    <div class="col-md-12">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3" id="img_@item.GalleryId">
                    <img src="~/Images/ProductImages/@item.ImageName" width="100%" height="160px" />
                    <a onclick="DeleteGallery(@item.GalleryId)" class="btn btn-block btn-danger">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function DeleteGallery(id) {
        $.get("/Admin/ProductGalleries/DeleteGallery/" + id, function () {
            $("#img_" + id).hide("slow");
        })
    }
</script>
