@model IEnumerable<Keyhanatr.Data.Domain.Slider.Slider>

@{
    ViewData["Title"] = "Index";
}
<section class="col-lg-12 pt-lg-4 pb-4 mb-3">
    <div class="pt-2 px-1 ps-lg-0 pe-xl-5">
        <h2 class="h3 py-2 text-center text-sm-start">اسلایدر صفحه اصلی </h2>
        <div>
            <div>
                <div class="bg-secondary rounded-3 p-4 mb-4">
                    <p class="fs-sm text-muted mb-0">صفحه مدیریت و نمایش تصاویر اسلایدر صفحه اصلی</p>
                </div>
                <p>
                    <a class="btn btn-success" asp-action="Create">ثبت اسلاید جدید</a>
                </p>
                <div class="table-responsive fs-md mb-4">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImageName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Titr)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Text)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BackColor)
                                </th>
                                @*<th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-3 align-middle">
                                        <img class="img-thumbnail" style="max-width: 150px"
                                             src="/SliderImages/@item.ImageName" />
                                    </td>
                                    <td class="py-3 align-middle">@item.Title</td>
                                    <td class="py-3 align-middle">@item.Titr</td>
                                    <td class="py-3 align-middle">@item.Text</td>
                                    <td class="py-3 align-middle">@item.BackColor</td>
                                    @*<td class="py-3 align-middle">@item.StartDate</td>
                                        <td class="py-3 align-middle">@item.EndDate</td>*@
                                    <td class="py-3 align-middle">@item.IsActive</td>
                                    <td class="py-3 align-middle">
                                        <a asp-action="Edit" asp-route-id="@item.SlideID" class="nav-link-style me-2" data-bs-toggle="tooltip" title="ویرایش"><i class="ci-edit"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.SlideID" class="nav-link-style me-2" data-bs-toggle="tooltip" title="درباره"><i class="ci-list"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.SlideID" class="nav-link-style text-danger" data-bs-toggle="tooltip" title="حذف">
                                            <div class="ci-trash"></div>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <nav class="d-md-flex justify-content-between align-items-center text-center text-md-start" aria-label="Page navigation">
                    <div class="d-md-flex align-items-center w-100">
                        <span class="fs-sm text-muted me-md-3">نمایش 10 از 52 رکورد</span>
                        <div class="progress w-100 my-3 mx-auto mx-md-0" style="max-width: 10rem; height: 4px;">
                            <div class="progress-bar" role="progressbar" style="width: 20%;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <button class="btn btn-outline-primary btn-sm" type="button">سوابق بیشتر</button>
                </nav>
            </div>
        </div>
    </div>
</section>


