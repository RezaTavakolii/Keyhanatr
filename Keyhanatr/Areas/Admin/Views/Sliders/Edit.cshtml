@model Keyhanatr.Data.Domain.Slider.Slider

@{
    ViewData["Title"] = "Edit";
}
<h1>ویرایش اسلاید</h1>

<section class="col-lg-12 pt-lg-4 pb-4 mb-3">
    <div class="pt-2 px-4 ps-lg-0 pe-xl-5">
        <div class="tab-content">
            <div class="tab-pane fade show active" id="profile" role="tabpanel">
                <div class="bg-secondary rounded-3 p-4 mb-4">
                    <div class="d-flex align-items-center">
                        <div class="ps-3">
                            <div class="p mb-0 fs-ms text-muted">از این قسمت می توانید اسلایدر را ویرایش نمایید.</div>
                        </div>
                    </div>
                </div>
                <form asp-action="Edit" enctype="multipart/form-data">
                    <input type="hidden" asp-for="SlideID" />
                    <input type="hidden" asp-for="ImageName" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row gx-4 gy-3">

                        <div class="col-sm-12">
                            <label asp-for="Title" class="form-label">عنوان اسلاید</label>
                            <input asp-for="Title" class="form-control" type="text" id="dashboard-ln">
                        </div>
                        <div class="col-sm-12">
                            <label asp-for="Text" class="form-label">متن اسلاید</label>
                            <input asp-for="Text" class="form-control">
                        </div>
                        <div class="col-sm-12 mt-5">
                            <label asp-for="ImageName" class="form-label">انتخاب تصویر</label>
                            <input type="file" name="imgUp" />
                            <img class="img-thumbnail" src="/SliderImages/@Model.ImageName" style="width: 150px" />
                        </div>
                        <!--<div class="col-sm-6">
            <label asp-for="StartDate" class="form-label">تاریخ شروع</label>
            <input type="text" name="stDate" class="form-control" DatePicker="1">
        </div>
        <div class="col-sm-6">
            <label asp-for="EndDate" class="form-label">تاریخ پایان</label>
            <input type="text" name="edDate" class="form-control" DatePicker="1">-->
                        @*<input asp-for="EndDate" name="edDate"  class="form-control">*@
                        <!--</div>-->
                        <div class="col-sm-6 form-check mt-5">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                            </label>
                        </div>
                        <div class="col-12">
                            <hr class="mt-2 mb-4">
                            <div class="d-sm-flex justify-content-between align-items-center">
                                <div>
                                    <a asp-action="Index">بازگشت به لیست</a>
                                </div>
                                <button class="btn btn-primary mt-3 mt-sm-0" type="submit">ویرایش اسلاید</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>




