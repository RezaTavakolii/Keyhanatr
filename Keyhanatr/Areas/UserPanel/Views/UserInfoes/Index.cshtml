@model IEnumerable<Keyhanatr.Data.Domain.User.UserInfo>
@{
    Layout = "_UserPanelLayout";
    ViewData["Title"] = "EditProfile";
}
<div class="d-none d-lg-flex justify-content-between align-items-center pt-lg-3 pb-4 pb-lg-5 mb-lg-3">
    <h6 class="fs-base text-light mb-0">جزئیات نمایه خود را در زیر به روز کنید:</h6><a asp-action="Logout" class="btn btn-primary btn-sm"><i class="ci-sign-out me-2"></i>خروج</a>
</div>


<form asp-action="Edit" enctype="multipart/form-data" method="post">






    @foreach (var item in Model)
    {
        @if (item != null)
        {
            <div class="col-md-12 alert alert-info">
                <a  asp-area="UserPanel" asp-controller="UserInfoes" asp-action="Create"><i class="ci-package me-2 mt-n1 alert-secondary"></i><label>افزودن اطلاعات کاربری</label></a>
            </div>

        }
        <div class="bg-secondary rounded-3 p-4 mb-4">
            <div class="d-flex align-items-center">
                <div class="row gx-4 gy-3 ">
                    <div class="col-md-12 ">
                        <img class="rounded" src="/UserInfoImages/@item.ImageName" width="90" alt="@User.Identity.Name">
                    </div>
                </div>
            </div>
            <br />
            <div class="d-flex align-items-center">
                <div class="row gx-4 gy-3">
                    <div class="col-md-6 ">
                        <label> @Html.DisplayNameFor(model => model.Name) : </label>
                        <label> @Html.DisplayFor(modelItem => item.Name) </label>
                    </div>
                    <div class="col-md-6">
                        <label> @Html.DisplayNameFor(model => model.Family) : </label>
                        <label> @Html.DisplayFor(modelItem => item.Family) </label>
                    </div>
                    <div class="col-md-6">
                        <label> @Html.DisplayNameFor(model => model.Email) : </label>
                        <label> @Html.DisplayFor(modelItem => item.Email) </label>
                    </div>
                    <div class="col-md-6">
                        <label> @Html.DisplayNameFor(model => model.PhoneDaftar) : </label>
                        <label> @Html.DisplayFor(modelItem => item.PhoneDaftar) </label>
                    </div>

                    <div class="col-12">
                        <hr class="mt-2 mb-3">
                        <div class="d-flex flex-wrap justify-content-between align-items-center">
                            <div>
                                <label class="form-check-label" for="subscribe_me">در صورت تمایل اطلاعات خود را بروزرسانی کنید</label>
                            </div>

                            <a class="btn btn-primary mt-3 mt-sm-0" asp-action="Edit" asp-route-id="@item.UserInfoID">بروزرسانی پروفایل</a>

                        </div>
                    </div>
                </div>

            </div>
        </div>

    }


</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
