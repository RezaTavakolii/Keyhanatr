@model bool
@using System.Security.Claims
@{
    Layout = "_Layout";
    ViewData["Title"] = "فعالسازی";
}
<div class="container py-4 py-lg-5 my-4">
    <div class="row">
        <div class="col-md-6 offset-md-3 offset-lg-3">
            <div class="card border-0 shadow">
                <div class="card-body">
                    <h2 class="h4 mb-1" style="text-align:center;">فعالسازی حساب کاربری</h2>
                    <br />
                    <hr />
                    <br />
                    @if (Model)
                    {
                        <div class="alert alert-danger" style="text-align:center;">
                            متأسفانه حساب شما فعال نگردید، کد پیامک شده باید صحیح وارد شود.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success" style="text-align:center;">
                            @*«@User.Identity.Name»*@ کاربر عزیز حساب کاربری شما فعال شد، لطفاً از طریق
                            <a asp-action="Login">ورود به سایت</a>
                            وارد شوید.
                        </div>
                    }
                    <br />
                    <div class="row gx-4 gy-3">
                        <div class="col-12 text-end">
                            <a class="btn btn-secondary" href="/"><i class="ci-home me-2 ms-n1"></i>صفحه اصلی</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>