@model Keyhanatr.Data.ViewModel.Account.ResetPasswordViewModel

@{
    ViewData["Title"] = "ResetPassword";
}

<div class="container py-4 py-lg-5 my-4">
    <div class="row">
        <div class="col-md-6 offset-lg-3">
            <div class="card border-0 shadow">
                <div class="card-body">
                    <h2 class="h4 mb-1" style="text-align:center;">بازنشانی کلمه عبور</h2>
                    <br />
                    <hr>
                    <h3 class="fs-base pt-4 pb-2" style="text-align:center;"> کاربر عزیز لطفاً کد پیامک شده و کلمه عبور جدید را وارد نمایید.</h3>

                    <form asp-action="ResetPassword" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="input-group mb-3">
                            <i class="ci-user position-absolute top-50 translate-middle-y text-muted fs-base ms-3"></i>
                            <input asp-for="ActiveCode" class="form-control rounded-start" type="text" placeholder="کد پیامکی" required>
                            <span asp-validation-for="ActiveCode" class="text-danger"></span>
                        </div>
                        
                        <div class="input-group mb-3">
                            <i class="ci-locked position-absolute top-50 translate-middle-y text-muted fs-base ms-3"></i>
                            <div class="password-toggle w-100">
                                <input asp-for="Password" class="form-control" type="password" placeholder="کلمه عبور جدید" required>
                                <label class="password-toggle-btn" aria-label="نمایش/پنهان کردن">
                                    <input class="password-toggle-check" type="checkbox"><span class="password-toggle-indicator"></span>
                                </label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <i class="ci-locked position-absolute top-50 translate-middle-y text-muted fs-base ms-3"></i>
                            <div class="password-toggle w-100">
                                <input asp-for="RePassword" class="form-control" type="password" placeholder="تکرار کلمه عبور جدید" required>
                                <label class="password-toggle-btn" aria-label="نمایش/پنهان کردن">
                                    <input class="password-toggle-check" type="checkbox"><span class="password-toggle-indicator"></span>
                                </label>
                                <span asp-validation-for="RePassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 text-end">
                            <button class="btn btn-primary" type="submit"><i class="ci-user me-2 ms-n1"></i>ثبت کلمه عبور</button>
                        </div>
                    </form>
                    <br />
                    <hr />
                    <br />
                    <div class="row gx-4 gy-3">
                        <div class="col-6 text-start">
                            <a class="btn btn-success" href="Login"><i class="ci-unlocked me-2 ms-n1"></i>ورود</a>
                        </div>
                        <div class="col-6 text-end">
                            <a class="btn btn-secondary" href="/"><i class="ci-home me-2 ms-n1"></i>صفحه اصلی</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
